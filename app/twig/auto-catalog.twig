{% extends "layouts/app.twig" %}

{% block content %}
	{% include "widgets/breadcrumbs.twig" %}

	<div class="content-area left-direction clearfix">
		<div class="container">
			<div class="row">
				<div class="content-area__left-side col-xs-12 col-md-9">
					<div class="display-flex space-between mb2 mobile-display-block">
						<div class="block-title mb0 text-uppercase vab dib flex-middle">Объявления</div>
						<div class="content-area__left-side__right-area text-uppercase ff-sfb dib mobile-display-block text-right">
							<ul class="clean-element content-block__tab-menu-listing fz0 lts1">
								<li class="content-block__tab-menu-item dib active">
									<a class="content-block__tab-menu-link fz14 -text-grey" data-toggle="tab" href="#catalog-popular">Популярные</a>
								</li>
								<li class="content-block__tab-menu-item dib">
									<a class="content-block__tab-menu-link fz14 -text-grey" data-toggle="tab" href="#catalog-all">все</a>
								</li>
							</ul>
						</div>
					</div>

					<div class="content-area__container content-area__section white-bg tab-content">
						<div class="tab-pane fade" id="catalog-all">
							<div class="mb15">
								<div class="auto-catalog__listing">
									{% for i in 1..5 %}
										<div class="row">
											{% for item in 1..3 %}
												{% include "elements/catalog-auto-item.twig" %}
											{% endfor %}
										</div>
									{% endfor %}
								</div>
							</div>
							{% include 'widgets/pagination.twig' %}
						</div>
						<div class="tab-pane active in fade" id="catalog-popular">
							<div class="auto-catalog__listing">
								{% for i in 1..4 %}
									<div class="row">
										{% for item in 1..3 %}
											{% include "elements/catalog-auto-item.twig" %}
										{% endfor %}
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
				<div class="visible-sm visible-xs clearfix mb30"></div>
				<div class="content-area__right-side col-md-3 col-xs-12">
					<div class="content-area__right-side-item hidden-xs">
						{% include 'widgets/right-side__discussing-block.twig' %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}