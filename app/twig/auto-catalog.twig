{% extends "layouts/app.twig" %}

{% block content %}
    {% include "widgets/breadcrumbs.twig" %}

    <div class="content-area clearfix">
        <div class="container">
            <div class="row">
                <div class="content-area__right-side col-md-3 col-xs-12">
                    <div class="content-area__right-side-item hidden-sm hidden-xs">
                        {% include 'widgets/right-side__discussing-block.twig' %}
                    </div>
                </div>
                <div class="visible-sm visible-xs clearfix"></div>
                <div class="content-area__left-side col-xs-12 col-md-9">
                    <div class="display-flex space-between mb2">
                        <div class="block-title mb0 text-uppercase vab dib flex-middle">Объявления</div>
                        <div class="content-area__left-side__right-area text-uppercase ff-sfb dib flex-middle">
                            <ul class="clean-element content-block__tab-menu-listing fz0 lts1">
                                <li class="content-block__tab-menu-item dib active">
                                    <a class="content-block__tab-menu-link fz14 --text-grey" data-toggle="tab" href="#catalog-popular">Популярные</a>
                                </li>
                                <li class="content-block__tab-menu-item dib">
                                    <a class="content-block__tab-menu-link fz14 --text-grey" data-toggle="tab" href="#catalog-all">все</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="content-area__container content-area__section white-bg tab-content">
                        <div class="tab-pane fade" id="catalog-all">
                            <div class="mb15">
                                <div class="auto-catalog__listing row">
                                    {% set Counter = 1 %}
                                    {% set CounterSM = 1 %}
                                    {% for i in 1..15 %}
                                        {% include "elements/catalog-auto-item.twig" %}

                                        {% if CounterSM == 2 %}
                                            <div class="clearfix visible-xs"></div>
                                        {% endif %}

                                        {% if Counter == 3 %}
                                            <div class="clearfix visible-sm visible-lg"></div>
                                        {% endif %}
                                        {% if CounterSM == 2 %}
                                            {% set CounterSM = 1 %}
                                        {% else %}
                                            {% set CounterSM = CounterSM + 1 %}
                                        {% endif %}
                                        {% if Counter == 3 %}
                                            {% set Counter = 1 %}
                                        {% else %}
                                            {% set Counter = Counter + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            {% include 'widgets/pagination.twig' %}
                        </div>
                        <div class="tab-pane active in fade" id="catalog-popular">
                            <div class="mb15">
                                <div class="auto-catalog__listing row">
                                    {% set Counter = 1 %}
                                    {% set CounterSM = 1 %}
                                    {% for i in 1..12 %}
                                        {% include "elements/catalog-auto-item.twig" %}

                                        {% if CounterSM == 2 %}
                                            <div class="clearfix visible-xs"></div>
                                        {% endif %}

                                        {% if Counter == 3 %}
                                            <div class="clearfix visible-sm visible-lg"></div>
                                        {% endif %}
                                        {% if CounterSM == 2 %}
                                            {% set CounterSM = 1 %}
                                        {% else %}
                                            {% set CounterSM = CounterSM + 1 %}
                                        {% endif %}
                                        {% if Counter == 3 %}
                                            {% set Counter = 1 %}
                                        {% else %}
                                            {% set Counter = Counter + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}