{% extends "layouts/app.twig" %}

{% block content %}
    {% include "widgets/breadcrumbs.twig" %}

    <div class="content-area container">
        <div class="content-area__left-side">
            <div class="section-title text-uppercase">Объявления</div>

            <div class="content-area__container">
                <div class="content-area__header content-area__section">
                    <select class="select_picker">
                        <option value="">По актуальности</option>
                        <option value="">По актуальности</option>
                        <option value="">По актуальности</option>
                        <option value="">По актуальности</option>
