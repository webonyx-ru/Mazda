                        </select>
                    </form>
                    <div class="content-area__section adv-grid__wrapper">
                        <div class="row adv-grid">
                            {% set Counter = 1 %}
                            {% set CounterSM = 1 %}
                            {% for i in 1..12 %}
                                {% include "elements/adv-item.twig" %}

                                {% if CounterSM == 2 %}
                                    <div class="clearfix visible-sm"></div>
                                {% endif %}

                                {% if Counter == 3 %}
                                    <div class="clearfix visible-md visible-lg"></div>
                                {% endif %}
                                {% if CounterSM == 2 %}
                                    {% set CounterSM = 1 %}
                                {% else %}
                                    {% set CounterSM = CounterSM + 1 %}
                                {% endif %}
                                {% if Counter == 3 %}
                                    {% set Counter = 1 %}
                                {% else %}
                                    {% set Counter = Counter + 1 %}
                                {% endif %}
                            {% endfor %}
