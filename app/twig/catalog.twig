                    </select>
                    <select class="select_picker">
                        <option value="">За все время</option>
                    </select>
                    <select class="select_picker">
                        <option value=""><span class="rouble">&#x20bd;</span></option>
                        <option value="">$</option>
                        <option value=""><span class="rouble">&#x20bd;</span></option>
                        <option value="">$</option>
                    </select>
                </div>
                <div class="content-area__section adv-grid__wrapper">
                    <div class="row adv-grid">
                        {% set Counter = 1 %}
                        {% set CounterSM = 1 %}
                        {% for i in 1..12 %}
                            {% include "widgets/adv-item.twig" %}

                            {% if CounterSM == 2 %}
                                <div class="clearfix visible-sm"></div>
                            {% endif %}

                            {% if Counter == 3 %}
                                <div class="clearfix visible-md visible-lg"></div>
                            {% endif %}
                            {% if CounterSM == 2 %}
                                {% set CounterSM = 1 %}
                            {% else %}
                                {% set CounterSM = CounterSM + 1 %}
                            {% endif %}
                            {% if Counter == 3 %}
                                {% set Counter = 1 %}
                            {% else %}
                                {% set Counter = Counter + 1 %}
                            {% endif %}
                        {% endfor %}
                    </div>
                    {% include "widgets/pagination.twig" %}
                </div>
            </div>
        </div>
        <div class="content-area__right-side">
            <div class="block-title text-uppercase">Фильтр</div>
        </div>
    </div>
{% endblock %}